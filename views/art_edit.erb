<h1>Update <%=@art.name() %> </h1>

<form action="/arts/<%= @art.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename this piece of art:</label>
  <input id="name" name="name" type="text">
  <label for="artist">Update the artist of this piece:</label>
  <input id="artist" name="artist" type="text">

  <button type="submit">Update</button>
</form>
